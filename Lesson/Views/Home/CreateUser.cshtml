@model Lesson.Common.Dto.UserCreateDto;

@{
    ViewData["Title"] = "Home Page";
}
<html>
<head>
    <title></title>
</head>
<body>
<div class="text-center">
    <h1 class="display-4">Create</h1>
</div>

<form asp-controller="Home" asp-action="CreateUser" method="post">
    
    <div class="form-group">
        <label class="control-label">Email: </label>
        @Html.TextBoxFor(x => x.Email, new { size = 32 })
    </div>

    <div class="form-group">
        <label class="control-label">Password: </label>
        @Html.TextBoxFor(x => x.Password, new { size = 32 })
    </div>

    <div class="form-group">
        <label class="control-label">Name: </label>
        @Html.TextBoxFor(x => x.Name, new { size = 32 })
    </div>

    <div class="form-group">
        <label class="control-label">Age: </label>
        @Html.TextBoxFor(x => x.Age, new { size = 32 })
    </div>

    <input class="button" type="submit" value="Auth">
</form>
</body>
</html>
